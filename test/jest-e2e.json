{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@lib/common/(.*)$": "<rootDir>/../libs/common/src/$1",
    "^@lib/core/(.*)$": "<rootDir>/../libs/core/src/$1",
    "^@lib/base/(.*)$": "<rootDir>/../libs/base/src/$1",
    "^@lib/modules/(.*)$": "<rootDir>/../libs/modules/src/$1"
  }
}
